                <h3>Home</h3>
            </FluentNavLink>

            <FluentNavGroup Expanded="true" Title="Task Management" Gap="10px">
                <FluentNavLink Href="/UserTasks" Icon="@(new Icons.Regular.Size20.Info())">User Tasks</FluentNavLink>
            </FluentNavGroup>

            <FluentNavGroup Expanded="true" Title="Identity Management" Gap="10px">
                <FluentNavLink Href="/RelationTuples" Icon="@(new Icons.Regular.Size20.Info())">Relation Tuples</FluentNavLink>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>