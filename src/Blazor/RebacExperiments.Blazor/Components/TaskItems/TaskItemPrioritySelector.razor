@using RebacExperiments.Blazor.Extensions
@using RebacExperiments.Shared.ApiSdk.Models

@namespace RebacExperiments.Blazor.Components

@inherits FluentComponentBase
<FluentSelect @attributes="AdditionalAttributes" class="@Class" style="@Style"
              Id="@Id"
              Title="@Title"
              Label="@Label"
              AriaLabel="@Title"
              Disabled="@Disabled"
              Items="@TaskItemPriorities"
              OptionText="@(i => Loc.TranslateEnum(i))"
              OptionValue="@(i => i.ToString())"
              TOption=TaskItemPriorityEnum
              Value=@_value
              SelectedOption=@_taskItemPriority
              SelectedOptionChanged="OnSelectedValueChanged"
              Required="@Required">
</FluentSelect>